#/bin/bash
clear

#./indicator.py config-local.py ; exit


if [ "$TERM" != "screen" ]; then
	tmux  \
	new-session -s indicator \
		"./indicator.py config-local.py ; sleep 9999" \; \
	split-window -p79 \
		"./indicator.py config-remote.py ; sleep 9999" \; \
	split-window -p70 \
		"bash ; tmux kill-session -t indicator"
	exit 0
fi

curl "http://localhost:9095/?token=remote&value=1"
sleep 2
curl "http://localhost:9095/?token=remote&value=0"
